@model IEnumerable<BlogMvcWeb.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Yeni Blog ekle", "Create", null, new {@class="btn btn-primary" })
</p>
<hr /> 
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.category.kategori_adi)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.baslik)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.resim)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ekleme_tarihi)
        </th>
        <th class="text-center" style="width:50px">
            @Html.DisplayNameFor(model => model.onay)
        </th>
        <th style="width:250px"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.category.kategori_adi)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.baslik)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.resim)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ekleme_tarihi)
        </td>
        <td class="text-center">
            @if (item.onay == true)
            {
                <label class="text-success">Onaylı</label>
            }
            else
            {
                <label class="text-danger">Onay bekleniyor...</label>
            }
        </td>
        <td class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="btn btn-warning btn-xs" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id },new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
