@model UserIdenty.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            @Model.Role.Name'ye Ekle
        </div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">Bu role eklenebilecek kullanıcı yok</td></tr>
            }
            else
            {
                <tr>
                    <td>
                        @Model.Role.Name
                    </td>
                    <td>
                        Rol
                    </td>
                </tr>
                foreach (var item in Model.NonMembers)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@item.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            @Model.Role.Name'den çıkar
        </div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">Bu rolden çıkaraılabilecek bir kullanıcı yok</td></tr>
            }
            else
            {
                <tr>
                    <td>
                        @Model.Role.Name
                    </td>
                    <td>
                        Rol
                    </td>
                </tr>
                foreach (var item in Model.Members)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@item.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}

