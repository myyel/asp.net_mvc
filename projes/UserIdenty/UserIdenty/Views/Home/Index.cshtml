
@{
    ViewBag.Title = "Home Page";
}

<h2>Home</h2>
<hr />

@if (User.Identity.IsAuthenticated)
{
    <label class="label label-info">
        @User.Identity.Name
    </label>
    <a href="/Account/Logout" class="btn btn-danger">Çıkış yap</a> 
}
else
{
    <a href="/Account/Login" class="btn btn-success">Giriş Yap</a>
    <a href="/Account/Register" class="btn btn-primary">Kullanıcı Oluştur</a>
}
